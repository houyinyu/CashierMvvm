<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog">

    <LinearLayout
        android:id="@+id/dialogCodeLessProduct_titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_orange_top_4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="添加无码商品"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/dialogCodeLessProduct_dismissImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="9dp"
            android:paddingTop="11dp"
            android:paddingRight="9dp"
            android:paddingBottom="11dp"
            android:src="@drawable/icon_dismiss" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_boom_4"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingTop="16dp"
        android:paddingRight="25dp"
        android:paddingBottom="40dp"
        app:layout_constraintTop_toBottomOf="@id/dialogCodeLessProduct_titleLayout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="价格："
                android:textColor="@color/color_1a"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/dialogCodeLessProduct_priceEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_ccc_line"
                android:gravity="center"
                android:minWidth="140dp"
                android:paddingLeft="12dp"
                android:inputType="numberDecimal"
                android:paddingTop="5dp"
                android:paddingRight="12dp"
                android:paddingBottom="5dp"
                android:textColor="@color/color_1a"
                android:textColorHint="@color/color_ccc"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="数量："
                android:textColor="@color/color_1a"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/dialogCodeLessProduct_subtractBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_all_f5"
                    android:src="@drawable/icon_shop_cart_subtract" />

                <TextView
                    android:id="@+id/dialogCodeLessProduct_numText"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_f5_line"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="1"
                    android:textColor="@color/color_1a"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/dialogCodeLessProduct_addBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_all_f5"
                    android:src="@drawable/icon_shop_cart_add" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialogCodeLessProduct_cancelBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_e6_line_btn_4"
                android:gravity="center"
                android:paddingLeft="28dp"
                android:paddingTop="10dp"
                android:paddingRight="28dp"
                android:paddingBottom="10dp"
                android:text="取消"
                android:textColor="@color/selector_1a_60_press"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dialogCodeLessProduct_confirmBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="@drawable/selector_orange_btn_4"
                android:gravity="center"
                android:paddingLeft="28dp"
                android:paddingTop="10dp"
                android:paddingRight="28dp"
                android:paddingBottom="10dp"
                android:text="确认"
                android:textColor="@color/selector_white_60_press"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>