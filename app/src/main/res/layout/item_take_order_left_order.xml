<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/itemTakeOrderLeftOrder_parentView"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/itemTakeOrderLeftOrder_lineView"
        style="@style/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:paddingRight="15dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/itemTakeOrderLeftOrder_lineView">

        <TextView
            android:id="@+id/itemTakeOrderLeftOrder_orderNoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号："
            android:textColor="@color/color_1a"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemTakeOrderLeftOrder_orderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_1a"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/itemTakeOrderLeftOrder_orderNoText"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemTakeOrderLeftOrder_orderPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单金额："
            android:textColor="@color/color_1a"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemTakeOrderLeftOrder_orderNoText" />

        <TextView
            android:id="@+id/itemTakeOrderLeftOrder_orderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0"
            android:textColor="@color/color_1a"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/itemTakeOrderLeftOrder_orderPriceText"
            app:layout_constraintTop_toBottomOf="@id/itemTakeOrderLeftOrder_orderNoText" />

        <TextView
            android:id="@+id/itemTakeOrderLeftOrder_timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemTakeOrderLeftOrder_orderPriceText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>