<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemRightFirstCategory_parentLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemRightFirstCategory_text"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="64dp"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="21dp"
        android:maxLines="2"
        android:paddingTop="11dp"
        android:paddingRight="21dp"
        android:paddingBottom="11dp"
        android:textColor="@color/color_1a"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@id/itemRightFirstCategory_line"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/itemRightFirstCategory_line"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/itemRightFirstCategory_text"
        android:background="@color/color_ccc"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>