<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemShopCartEvent_eventText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bf"
        android:padding="12dp"
        android:text="活动"
        android:textColor="@color/color_1f"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemShopCartEvent_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/itemShopCartEvent_eventText" />
</androidx.constraintlayout.widget.ConstraintLayout>